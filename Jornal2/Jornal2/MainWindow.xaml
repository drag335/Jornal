<Window x:Class="Jornal2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.microsoft.com/2006/xaml/markup-compatibility"
     
        xmlns:local="clr-namespace:Jornal2"
        
        Title="Журнал студентов" Height="600" Width="900">
        
     

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0" Background="#000000">
            <Button x:Name="btnStudents" Content="Студенты" 
                    Click="BtnStudents_Click" Height="40"/>
            <Button x:Name="btnSubjects" Content="Предметы" 
                    Click="BtnSubjects_Click" Height="40"/>
            
            <Button x:Name="btnGrades" Content="Оценки" 
                    Click="BtnGrades_Click" Height="40"/>
            <Button x:Name="btnAttendance" Content="Посещаемость" 
                    Click="BtnAttendance_Click" Height="40"/>
        </StackPanel>

   
        <Grid Grid.Column="1">
            
            <StackPanel x:Name="studentsPanel" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Имя:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtStudentName" Width="150"/>
                    <TextBlock Text="Группа:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox x:Name="txtStudentGroup" Width="100"/>
                    <Button x:Name="btnAddStudent" Content="Добавить" Click="BtnAddStudent_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgStudents" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="100"/>
                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" Click="DeleteStudent_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

           
            <StackPanel x:Name="subjectsPanel" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Название предмета:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSubjectName" Width="200"/>
                    <Button x:Name="btnAddSubject" Content="Добавить" Click="BtnAddSubject_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgSubjects" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" Click="DeleteSubject_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

         
            <StackPanel x:Name="gradesPanel" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <ComboBox x:Name="cbStudentForGrade" DisplayMemberPath="Name" Width="150"/>
                    <ComboBox x:Name="cbSubjectForGrade" DisplayMemberPath="Name" Width="150" Margin="10,0,0,0"/>
                    <TextBlock Text="Оценка:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cbGradeValue" Width="60">
                        <ComboBoxItem>2</ComboBoxItem>
                        <ComboBoxItem>3</ComboBoxItem>
                        <ComboBoxItem>4</ComboBoxItem>
                        <ComboBoxItem>5</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="btnAddGrade" Content="Добавить оценку" Click="BtnAddGrade_Click" Margin="10,0,0,0"/>
                </StackPanel>

                <DataGrid x:Name="dgGrades" AutoGenerateColumns="False" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Студент" Binding="{Binding StudentName}" Width="150"/>
                        <DataGridTextColumn Header="Предмет" Binding="{Binding SubjectName}" Width="150"/>
                        <DataGridTextColumn Header="Оценка" Binding="{Binding Value}" Width="80"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" Click="DeleteGrade_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            
            <StackPanel x:Name="attendancePanel" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <ComboBox x:Name="cbStudentForAttendance" DisplayMemberPath="Name" Width="150"/>
                    <ComboBox x:Name="cbSubjectForAttendance" DisplayMemberPath="Name" Width="150" Margin="10,0,0,0"/>
                    <DatePicker x:Name="dpAttendanceDate" Width="120" Margin="10,0,0,0"/>
                    <CheckBox x:Name="cbIsPresent" Content="Присутствовал" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Button x:Name="btnAddAttendance" Content="Добавить запись" Click="BtnAddAttendance_Click" Margin="10,0,0,0"/>
                </StackPanel>

                <DataGrid x:Name="dgAttendance" AutoGenerateColumns="False" Height="350">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Студент" Binding="{Binding StudentName}" Width="150"/>
                        <DataGridTextColumn Header="Предмет" Binding="{Binding SubjectName}" Width="150"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Присутствовал" Binding="{Binding IsPresent}" Width="100"/>
                        <DataGridTemplateColumn Header="Действия" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить" Click="DeleteAttendance_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Margin="5">
                    <TextBlock Text="Статистика посещаемости:" FontWeight="Bold"/>
                    <TextBlock x:Name="tbAttendanceStats"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>